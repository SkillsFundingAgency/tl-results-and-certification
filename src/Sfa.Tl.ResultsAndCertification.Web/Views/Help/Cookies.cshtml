@{
    ViewData["Title"] = "Cookies";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">
            Cookie policy
        </h1>

        <p class="govuk-body">Cookies are files saved on your phone, tablet or computer when you visit a website.</p>
        <p class="govuk-body">We only use cookies that are essential for you to use this service.</p>
        <p class="govuk-body">These essential cookies do things like:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>remember which notifications you have seen so you are not shown them more than once</li>
            <li>temporarily store the selections you make</li>
            <li>keep you logged in during your browsing session</li>
        </ul>
        <p class="govuk-body">They are automatically enabled.</p>

        <table class="govuk-table govuk-!-margin-top-7">
            <caption class="govuk-table__caption govuk-heading-m">Protecting your security</caption>
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Name</th>
                    <th scope="col" class="govuk-table__header">Purpose</th>
                    <th scope="col" class="govuk-table__header">Expires</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell">CSRF-TOKEN_</td>
                    <td class="govuk-table__cell">Used to prevent cross-site scripting attacks</td>
                    <td class="govuk-table__cell">When the browser is closed</td>
                </tr>
                <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell">tl-rc-x-csrf</td>
                    <td class="govuk-table__cell">Used to prevent cross site scripting attacks</td>
                    <td class="govuk-table__cell">When the browser is closed</td>
                </tr>
            </tbody>
        </table>

        <table class="govuk-table govuk-!-margin-top-7">
            <caption class="govuk-table__caption govuk-heading-m">Logging in and authentication</caption>
            <thead class="govuk-table__head">
                <tr class="govuk-table__row">
                    <th scope="col" class="govuk-table__header">Name</th>
                    <th scope="col" class="govuk-table__header">Purpose</th>
                    <th scope="col" class="govuk-table__header">Expires</th>
                </tr>
            </thead>
            <tbody class="govuk-table__body">
                <tr class="govuk-table__row">
                    <td scope="row" class="govuk-table__cell">tl-rc-auth-cookie</td>
                    <td class="govuk-table__cell">Used to track your current session and keep you logged in when browsing the service</td>
                    <td class="govuk-table__cell">After 20 minutes of inactivity</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>