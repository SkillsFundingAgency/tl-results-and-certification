@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.Registration.Manual.ChangeAcademicYearResponse
@using Sfa.Tl.ResultsAndCertification.Web.Content.Registration

@{
    ViewData["Title"] = @ChangeAcademicYearConfirmation.Page_Title;
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-panel govuk-panel--confirmation">
            <h1 class="govuk-panel__title">@ChangeAcademicYearConfirmation.Heading_Successful</h1>
            <div class="govuk-panel__body">
                @ChangeAcademicYearConfirmation.Caption_Text_Uln @Model.Uln
            </div>
        </div>
        <p class="govuk-body govuk-!-padding-top-3">@ChangeAcademicYearConfirmation.You_Successfully_Changed_The_Learner_Academic_Year</p>
        <p class="govuk-!-margin-top-8"><a id="viewRegistrationButton" class="govuk-button" role="button" asp-route="RegistrationDetails" asp-route-profileId="@Model.ProfileId">@ChangeAcademicYearConfirmation.View_Registration_Button_Text</a></p>
    </div>
</div>