@using Sfa.Tl.ResultsAndCertification.Web.Content.Layout

<footer class="govuk-footer " role="contentinfo">
    <div class="govuk-width-container ">
        <div class="govuk-footer__meta">
            <div class="govuk-footer__meta-item govuk-footer__meta-item--grow">
                <h2 class="govuk-visually-hidden">@Footer.Heading_Support_Links_Text</h2>
                <ul class="govuk-footer__inline-list">
                    <li class="govuk-footer__inline-list-item">
                        <a class="govuk-footer__link" asp-route="Cookies">@Footer.Cookies_Link_Text</a>
                    </li>
                    <li class="govuk-footer__inline-list-item">
                        <a class="govuk-footer__link" href="https://www.gov.uk/help/accessibility-statement">@Footer.Accessibilitystatement_Link_Text</a>
                    </li>
                    @* TODO: Excluded for the MVP release.
                        <li class="govuk-footer__inline-list-item">
                            <a class="govuk-footer__link" asp-controller="Help" asp-action="Privacy">@Footer.Privacy_Link_Text</a>
                        </li>*@
                    <li class="govuk-footer__inline-list-item">
                        <a class="govuk-footer__link" asp-route="TermsAndConditions">@Footer.TermsAndCond_Link_Text</a>
                    </li>
                    <li class="govuk-footer__inline-list-item">@Footer.Esfa_Link_Info_Text <a href="http://gov.uk/sfa" target="_blank" class="govuk-footer__link">@Footer.Esfa_Link_Text</a></li>
                </ul>

                <svg role="presentation" focusable="false" class="govuk-footer__licence-logo" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 483.2 195.7" height="17" width="41">
                    <path fill="currentColor" d="M421.5 142.8V.1l-50.7 32.3v161.1h112.4v-50.7zm-122.3-9.6A47.12 47.12 0 0 1 221 97.8c0-26 21.1-47.1 47.1-47.1 16.7 0 31.4 8.7 39.7 21.8l42.7-27.2A97.63 97.63 0 0 0 268.1 0c-36.5 0-68.3 20.1-85.1 49.7A98 98 0 0 0 97.8 0C43.9 0 0 43.9 0 97.8s43.9 97.8 97.8 97.8c36.5 0 68.3-20.1 85.1-49.7a97.76 97.76 0 0 0 149.6 25.4l19.4 22.2h3v-87.8h-80l24.3 27.5zM97.8 145c-26 0-47.1-21.1-47.1-47.1s21.1-47.1 47.1-47.1 47.2 21 47.2 47S123.8 145 97.8 145" />
                </svg>
                <span class="govuk-footer__licence-description">
                    @Footer.Licence_Desc_Link_Info_Text_Part1
                    <a class="govuk-footer__link" href="https://www.nationalarchives.gov.uk/doc/open-government-licence/version/3/" rel="license">@Footer.Licence_Desc_Link_Text</a>@Footer.Licence_Desc_Link_Info_Text_Part2
                </span>
            </div>
            <div class="govuk-footer__meta-item">
                <a class="govuk-footer__link govuk-footer__copyright-logo" href="https://www.nationalarchives.gov.uk/information-management/re-using-public-sector-information/uk-government-licensing-framework/crown-copyright/">@Footer.Copyright_Link_Text</a>
            </div>
        </div>
    </div>
</footer>