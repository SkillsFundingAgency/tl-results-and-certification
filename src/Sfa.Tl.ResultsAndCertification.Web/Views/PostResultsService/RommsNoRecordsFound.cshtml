@model Sfa.Tl.ResultsAndCertification.Web.ViewModel.PostResultsService.RommsNoRecordsFoundViewModel
@using Sfa.Tl.ResultsAndCertification.Web.Content.PostResultsService
@using Sfa.Tl.ResultsAndCertification.Common.Helpers
@using Sfa.Tl.ResultsAndCertification.Web.WebConfigurationHelper
@inject IWebConfigurationService ConfigurationService

@{
    ViewData["Title"] = RommsNoRecordsFound.Page_Title;
}

@section NavigationBar {
    <vc:breadcrumb model=@Model.Breadcrumb></vc:breadcrumb>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">
            @RommsNoRecordsFound.Page_Heading
        </h1>

        <p class="govuk-body">@RommsNoRecordsFound.No_Records_Found_Message</p>

        <div class="govuk-button-group govuk-!-margin-bottom-6">
            <a id="backToHomeButton" class="govuk-button" role="button" asp-route="@RouteConstants.Home">@RommsNoRecordsFound.Button_Back_To_Home</a>
            <a id="backToAddRomms" class="govuk-button govuk-button--secondary" role="button" data-module="govuk-button" asp-route="@RouteConstants.StartReviewsAndAppeals">@RommsNoRecordsFound.Button_Add_Romms</a>
        </div>

        <h2 class="govuk-heading-m">@RommsNoRecordsFound.Get_Help_With_Mangage_TLevel_Results_Service</h2>

        <p class="govuk-body">
            @RommsNoRecordsFound.If_You_Need_Help <a class="govuk-link" href="mailto: @ConfigurationService.GetTechnicalSupportEmailAddress()?subject=@RommsNoRecordsFound.Email_Subject">@RommsNoRecordsFound.Contact_Us</a>. @RommsNoRecordsFound.We_Aim_To_Respond_Within_3_Working_Days
        </p>
    </div>
</div>